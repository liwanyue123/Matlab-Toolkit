% 定义圆心
C = [0; 0; 0];

% 定义半径
R = 1;

% 定义圆所在平面内的向量
inplane = [1; 0; 0];

% 定义法向量
normal = [1; 1; 1];

% 定义角度向量（这里是绘制整个圆，所以从0到2*pi）
t = 0:0.01:2*pi;

% 生成环形弧线的坐标
coordinates = arc(C, R, normal, t);

hold on
% 绘制环形弧线
plot3(coordinates(1,:), coordinates(2,:), coordinates(3,:), 'b', 'LineWidth', 2);


 
[x, y] = meshgrid(-range:distance:range, -range:distance:range);
z = 0 * ones(size(x));
surf(x, y, z, 'FaceAlpha', 0.5);
surf(z, y, x, 'FaceAlpha', 0.5);
surf(x, z, x, 'FaceAlpha', 0.5);










axis equal;
xlabel('X');
ylabel('Y');
zlabel('Z');
title('3D Circular Arc');
grid on;
